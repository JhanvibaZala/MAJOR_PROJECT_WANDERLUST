<% if(success && success.length) { %>

<div
  class="alert alert-success alert-dismissible fade show fade_success .fade mt-2 col-6 offset-3 d-flex justify-content-between align-items-center"
>
  <strong><%= success %></strong>
  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">
    &times;
  </button>
</div>

<% } %>


<% if(error && error.length) { %>

    <div
      class="alert alert-danger alert-dismissible fade show fade_error .fade mt-2 col-6 offset-3 d-flex justify-content-between align-items-center"
    >
      <strong><%= error %></strong>
      <button aria-hidden="true" data-dismiss="alert" class="close" type="button">
        &times;
      </button>
    </div>
    
    <% } %>