<% layout("../views/layouts/boilerplate.ejs") %>

 <div class="filter-container">
  <button class="scroll-btn left" onclick="scrollFilters('left')">
    <i class="fa-solid fa-chevron-left"></i>
  </button>
  <div class="filters" id="filters">
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-water-ladder "></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-cow"></i></div>
      <p>Farm</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-mug-hot"></i></i></div>
      <p>Breakfast</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-brands fa-fort-awesome"></i></i></i></div>
      <p>Castle</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-house"></i></div>
      <p>Tiny homes</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-sailboat"></i></div>
      <p>Boating</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-person-skiing"></i></div>
      <p>Skiing</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-city"></i></div>
      <p>Top cities</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-house-flood-water"></i></div>
      <p>Foating homes</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-igloo"></i></div>
      <p>Igloos</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-people-roof"></i></div>
      <p>Hostels</p>
    </div>
    <div class="filter">
      <div class="text-center"><i class="fa-solid fa-bed"></i></div>
      <p>Bedrooms</p>
    </div>
      <button class="scroll-btn right" onclick="scrollFilters('right')">
        <i class="fa-solid fa-chevron-right"></i>
      </button>
    </div>
  </div>

  
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
  <div class="col mb-4">
    <a href="/listings/<%= listing.id %>" class="text-decoration-none">
      <div class="card listing-card">
        <img
          class="card-img-top"
          style="height: 20rem"
          src="<%= listing.image.url %>"
          alt="<%= listing.title %>"
        />
        <div class="card-img-overlay">
          <p>
            <b> <%= listing.title %> </b>
          </p>
        </div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") :
            "N/A" %> / night
          </p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
<script src="/js/filter.js"></script>
</body>
</html>